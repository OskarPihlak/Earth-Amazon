<link href="/css/style.css" rel="stylesheet" type="text/css">
<style>
    .email-background {
        background: #eee;
        padding: 10px;
    }

    .email-container {
        background: white;
        margin: 0 auto;
        overflow: hidden;
        border-radius: 5px;
    }

    .email-preheader {
        background: #eee;
        color: #555;
        font-size: 15px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }

    .email-footer {
        margin: 0 auto;
        overflow: hidden;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
    }

    .email-bar {
        height: 50px;
        width: 300px;
        display: inline-block;
        background-color: #e9ecef;
        overflow: hidden;
        border-radius: .20rem;
        margin: 3px 0 0 0;
    }

    .email-container-printer {
        display: block;
        position: relative;
        margin: 20px auto;
        width: 310px;
        border-radius: .25rem;
        padding: 5px;
    }

    .progress-bar-toner {
        height: 50px;
        color: #ffffff;
        text-align: center;
        line-height: 45px;
    }

    .email-container-section-toners {
        width: 300px;
        display: inline-block;
    }

    .email-chart {
        display: inline-block;
        width: 675px;
    }

    .email-printer-heading {
        color: #000;
        text-align: center;
    }
    .email-status-green{
        color: #06ff00;
    }
    .email-status-red{
        color: #ff0000;
    }

    .email-status-container{
        text-align: center;
    }

    .black-bar {
        background-color: #000;
    }

    .cyan-bar-map {
        background-color: #96d8f3;
    }

    .magenta-bar-map {
        background-color: #ec008c;
    }

    .yellow-bar-map {
        background-color:#f0d470;
    }

</style>

<div class="email-background">

    <!-- -->
    <div class="email-preheader">Toonerite seis {{date}}</div>
    <div>
        <div class="email-container">

            <table cellpadding="0" cellspacing="0" width="300" >
                <tr>
                    <td style="background-color:#000000;padding:10px 0 10px 0;;color:#ffffff;width:100%;height: 40px;">100%</td>
                    <td style="background-color:#eeeeee;padding:0;width: 300px"></td>
                </tr>
            </table>
            <table cellpadding="0" cellspacing="0" width="300">
                <tr>
                    <td style="background-color:#aad4fa;padding:10px 0 10px 0;;color:#ffffff;width:8%;">8%</td>
                    <td style="background-color:#eeeeee;padding:0;width: 300px;height: 40px;"></td>
                </tr>
            </table>
            <table cellpadding="0" cellspacing="0" width="300">
                <tr>
                    <td style="background-color:#F0D470;padding:10px 0 10px 0;;color:#ffffff;width:88%;height: 40px;position: relative"><p style="position: absolute;top:10px;left: 50%;line-height: 1;">88%</p></td>
                    <td style="background-color:#eeeeee;padding:0;width: 300px;height: 40px;"></td>
                </tr>
            </table>
            <table cellpadding="0" cellspacing="0" width="300">
                <tr>
                    <td style="background-color:#EC008C;padding:10px 0 10px 0;;color:#ffffff;width:8%;">8%</td>
                    <td style="background-color:#eeeeee;padding:0;width: 300px;height: 40px;"></td>
                </tr>
            </table>

            <div class="email-container-printer" style="display: block;position: relative;margin: 20px auto;width: 310px;border-radius: .25rem;padding: 5px;">
                <table class="email-printer-heading" style="color: #000;text-align: center;">
                    <tbody>
                    <tr>
                        <td>test</td>
                    </tr>
                    <tr>
                        <td>192.168.67.133</td>
                    </tr>
                </table>
                <!-- black progress -->
                <table cellspacing="0" cellpadding="0" border="0">
                    <tr>
                        <td style="width:12px;color: #fff; background-color: #000000">12</td>
                        <td style="width:88px; background-color:#e9ecef;"></td>
                    </tr>
                </table>

                <!-- cyan progress -->
                <table cellspacing="0" cellpadding="0" border="0">
                    <tr style="width: 310px;">
                        <td style="width:33px;color: #fff; background-color: #96D8F3;">33%</td>
                        <td style="background-color:#e9ecef;"></td>
                    </tr>
                </table>

                <!-- yellow progress -->
                <table cellspacing="0" cellpadding="0" border="0">
                    <tr>
                        <td width="1" bgcolor="#F0D470" style="color: #ffffff">1%</td>
                        <td width="99" bgcolor="#e9ecef"></td>
                    </tr>
                </table>

                <!-- magenta progress -->
                <table cellspacing="0" cellpadding="0" border="0">
                    <tr>
                        <td width="9" bgcolor="#EC008C" style="color: #ffffff">9%</td>
                        <td width="91" bgcolor="#e9ecef"></td>
                    </tr>
                </table>


                <table class="email-container-section-toners" style="width: 300px;display: inline-block;">
                    <tr class="email-bar" style="height: 50px;width: 300px;display: inline-block;background-color: #e9ecef;overflow: hidden;border-radius: .20rem;margin: 3px 0 0 0;">
                        <td class="progress-bar black-bar progress-bar-toner" style="width: 12%;height: 50px;color: #ffffff;text-align: center;line-height: 45px;background-color: #000;">

                        </td>
                    </tr>

                    <tr class="email-bar" style="height: 50px;width: 300px;display: inline-block;background-color: #e9ecef;overflow: hidden;border-radius: .20rem;margin: 3px 0 0 0;">
                        <td class="progress-bar cyan-bar-map progress-bar-toner" style="width: 33%;height: 50px;color: #ffffff;text-align: center;line-height: 45px;background-color: #96d8f3;">33%
                        </td>
                    </tr>
                    <tr class="email-bar" style="height: 50px;width: 300px;display: inline-block;background-color: #e9ecef;overflow: hidden;border-radius: .20rem;margin: 3px 0 0 0;">
                        <td class="progress-bar yellow-bar-map progress-bar-toner" style="width: 1%;height: 50px;color: #ffffff;text-align: center;line-height: 45px;background-color: #f0d470;">1%
                        </td>
                    </tr>
                    <tr class="email-bar" style="height: 50px;width: 300px;display: inline-block;background-color: #e9ecef;overflow: hidden;border-radius: .20rem;margin: 3px 0 0 0;">
                        <td class="progress-bar magenta-bar-map progress-bar-toner" style="width: 9%;height: 50px;color: #ffffff;text-align: center;line-height: 45px;background-color: #ec008c;">9%
                        </td>
                    </tr>
                </table>
            </div>





















            <div class="email-status-container">
            {{#if all_is_good}}
                <p class="email-status-green">Printerid on korras</p>
            {{else}}
                <p class="email-status-red">MÃµned toonerid on madalad</p>
            {{/if}}
            </div>
            {{#each printers}}
                {{#if this.cartridge.critical}}
                    {{#if this.color}}
                        <div class="email-container-printer">
                            <div class="email-printer-heading">
                                <p>{{this.name}}<br></p>
                                <span>
                                    {{this.ip}}
                                </span>
                            </div>
                            <div class="email-container-section-toners">
                                <div class="email-bar">
                                    <div class="progress-bar black-bar progress-bar-toner"
                                         style="width:{{this.cartridge.black.value}}%;">{{this.cartridge.black.value}}%
                                    </div>
                                </div>
                                <div class="email-bar">
                                    <div class="progress-bar cyan-bar-map progress-bar-toner"
                                         style="width:{{this.cartridge.cyan.value}}%;">{{this.cartridge.cyan.value}}%
                                    </div>
                                </div>
                                <div class="email-bar">
                                    <div class="progress-bar yellow-bar-map progress-bar-toner"
                                         style="width:{{this.cartridge.yellow.value}}%;">{{this.cartridge.yellow.value}}
                                        %
                                    </div>
                                </div>
                                <div class="email-bar">
                                    <div class="progress-bar magenta-bar-map progress-bar-toner"
                                         style="width:{{this.cartridge.magenta.value}}%;">{{this.cartridge.magenta.value}}
                                        %
                                    </div>
                                </div>
                            </div>
                            <div id="chart_{{this.name}}" class="email-chart"></div>
                        </div>
                    {{else}}
                        <div class="email-container-printer">
                            <div class="email-printer-heading">
                                <p>{{this.name}}</p>
                                <span>
                                    {{this.ip}}
                                </span>
                            </div>

                            <div class="email-bar">
                                <div class="progress-bar black-bar progress-bar-toner"
                                     style="width:{{this.cartridge.black.value}}%;">{{this.cartridge.black.value}}%
                                </div>
                            </div>
                            <div id="chart_{{this.name}}" class="email-chart"></div>
                        </div>

                    {{/if}}
                {{/if}}
            {{/each}}
        </div>
        <div class="email-footer">@EestiMeediaPrinterid</div>
    </div>
</div>

<form action="/emailstuff" method="post">
    <button class="btn btn-primary">submit</button>
</form>

