<link href="/css/style.css" rel="stylesheet" type="text/css">
<style>
    .email-background {
        background: #eee;
        padding: 10px;
    }

    .email-container {
        background: white;
        margin: 0 auto;
        overflow: hidden;
        border-radius: 5px;
    }

    .email-preheader {
        background: #eee;
        color: #555;
        font-size: 15px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }

    .email-footer {
        margin: 0 auto;
        overflow: hidden;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
    }

    .email-bar {
        height: 50px;
        width: 300px;
        display: inline-block;
        background-color: #e9ecef;
        overflow: hidden;
        border-radius: .20rem;
        margin: 3px 0 0 0;
    }

    .email-container-printer {
        display: block;
        position: relative;
        margin: 20px auto;
        width: 310px;
        border-radius: .25rem;
        padding: 5px;
    }

    .progress-bar-toner {
        height: 50px;
        color: #ffffff;
        text-align: center;
        line-height: 45px;
    }

    .email-container-section-toners {
        width: 300px;
        display: inline-block;
    }

    .email-chart {
        display: inline-block;
        width: 675px;
    }

    .email-printer-heading {
        color: #000;
        text-align: center;
    }

    .black-bar {
        background-color: #000;
    }

    .cyan-bar-map {
        background-color: rgba(87, 202, 244, 0.6);
    }

    .magenta-bar-map {
        background-color: rgba(236, 0, 140, 0.6);
    }

    .yellow-bar-map {
        background-color: rgba(241, 196, 15, 0.6);
    }

</style>

<div class="email-background">

    <!-- -->
    <div class="email-preheader">Toonerite seis {{date}}</div>
    <div>
        <div class="email-container">
            {{#if all_is_good}}
                <p>Printerid on korras</p>
            {{else}}
            <p>MÃµned toonerid on madalad</p>
            {{/if}}
            {{#each printers}}
                {{#if this.cartridge.critical}}
                    {{#if this.color}}
                        <div class="email-container-printer">
                            <div class="email-printer-heading">
                                <p>{{this.name}}<br></p>
                                <span>
                                    {{this.ip}}
                                </span>
                            </div>
                            <div class="email-container-section-toners">
                                <div class="email-bar">
                                    <div class="progress-bar black-bar progress-bar-toner"
                                         style="width:{{this.cartridge.black.value}}%;">{{this.cartridge.black.value}}%
                                    </div>
                                </div>
                                <div class="email-bar">
                                    <div class="progress-bar cyan-bar-map progress-bar-toner"
                                         style="width:{{this.cartridge.cyan.value}}%;">{{this.cartridge.cyan.value}}%
                                    </div>
                                </div>
                                <div class="email-bar">
                                    <div class="progress-bar yellow-bar-map progress-bar-toner"
                                         style="width:{{this.cartridge.yellow.value}}%;">{{this.cartridge.yellow.value}}
                                        %
                                    </div>
                                </div>
                                <div class="email-bar">
                                    <div class="progress-bar magenta-bar-map progress-bar-toner"
                                         style="width:{{this.cartridge.magenta.value}}%;">{{this.cartridge.magenta.value}}
                                        %
                                    </div>
                                </div>
                            </div>
                            <div id="chart_{{this.name}}" class="email-chart"></div>
                        </div>
                    {{else}}
                        <div class="email-container-printer">
                            <div class="email-printer-heading">
                                <p>{{this.name}}</p>
                                <span>
                                    {{this.ip}}
                                </span>
                            </div>

                            <div class="email-bar">
                                <div class="progress-bar black-bar progress-bar-toner"
                                     style="width:{{this.cartridge.black.value}}%;">{{this.cartridge.black.value}}%
                                </div>
                            </div>
                            <div id="chart_{{this.name}}" class="email-chart"></div>
                        </div>

                    {{/if}}
                {{/if}}
            {{/each}}
        </div>
        <div class="email-footer">@EestiMeediaPrinterid</div>
    </div>
</div>

<form action="/emailstuff" method="post">
    <button class="btn btn-primary">submit</button>
</form>

